    <changeSet id="create_user" author="bogda">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM mysql.user WHERE user = 'user'</sqlCheck>
        </preConditions>
        <sql endDelimiter=";" splitStatements="true" stripComments="true">
            CREATE USER 'user'@'localhost' IDENTIFIED BY 'password';
            GRANT CREATE, INSERT ON yauza_clothes_db.* TO 'user'@'localhost';
        </sql>
    </changeSet>

